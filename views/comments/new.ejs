<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Add a New Comment for <%= campground.name %></h1>
    <div class="row" style="width: 30%; margin: 0 auto;">
        <div id="rating">
            <span class="star star5">&#9734</span>
            <span class="star star4">&#9734</span>
            <span class="star star3">&#9734</span>
            <span class="star star2">&#9734</span>
            <span class="star star1">&#9734</span>
        </div>
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input required class="form-control" type="text" name="comment[text]" placeholder="text">
            </div> 
                <input hidden required type="number" id="rating-form" name="comment[rating]" value="">
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            
        </form>
        <a href="/campgrounds">Return to Campground</a>
    </div>

</div>
