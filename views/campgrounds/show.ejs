<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">DATA 1</li>
                <li class="list-group-item">DATA 2</li>
                <li class="list-group-item">DATA 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= campground.price %>/night</h4>
                    <h4>
                        <a href=""><%= campground.name%></a>
                    </h4>
                    <p><%= campground.description%></p>
                    <% if(favouriteTorF == false){ %>
                        <form action="/campgrounds/<%=campground._id%>/favourites" method="POST">
                            <button id ="favourite" class="btn btn-success btn-md"><i class="fa fa-heart-o " aria-hidden="true"></i> Add to favourites</button>
                        </form>
                    <% } else { %>
                        <button id="favourited" class="btn btn-md"><i class="fa fa-heart" aria-hidden="true"></i> Favourited</button>
                    <% } %>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <div class="text-right">
                        <a class="btn btn-xs btn-default" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" class="deleteForm">
                            <button class="btn btn-xs btn-danger">Remove</button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add a Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <span class="pull-right">
                                    <a class="btn btn-xs btn-default" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" class="deleteForm">
                                        <button class="btn btn-xs btn-danger">Delete</a>
                                    </form>
                                </span>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>